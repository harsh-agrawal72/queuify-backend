# Production Environment
NODE_ENV=production
PORT=5000

# PostgreSQL Database Configuration (Neon DB or others)
# Format: postgres://user:password@host:port/dbname?sslmode=require
POSTGRES_HOST=your-db-host.neon.tech
POSTGRES_PORT=5432
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name

# JWT Setup
JWT_SECRET=super_secret_jwt_key_here
JWT_ACCESS_EXPIRATION_MINUTES=30

# Email Setup
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@queuify.vercel.app

# Client URL (Allowed origins)
CLIENT_URL=https://queuify.vercel.app
BASE_URL=https://your-render-app.onrender.com

# Google Auth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
